---
interface Props {
    bv: string;
}

const { bv } = Astro.props;
---

<div class="express-bilibili">
    <iframe
        src={`//player.bilibili.com/player.html?bvid=${bv}&page=1&high_quality=1`}
        scrolling="no"
        border="0"
        frameborder="no"
        framespacing="0"
        allowfullscreen="true"
        loading="lazy"></iframe>
</div>

<style>
    .express-bilibili {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
        height: 0;
        margin: 2rem 0;
        border-radius: 12px;
        overflow: hidden;
        background: #000;
    }
    .express-bilibili iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
