---
interface Props {
    color?:
        | "default"
        | "red"
        | "orange"
        | "yellow"
        | "green"
        | "cyan"
        | "blue"
        | "purple"
        | "light"
        | "dark"
        | "warning"
        | "error";
    label?: string; // Optional label if passed as prop instead of slot
}

const { color = "default", label } = Astro.props;

const colors = {
    default: {
        bg: "var(--md-sys-color-surface-variant)",
        text: "var(--md-sys-color-on-surface-variant)",
    },
    red: { bg: "#ffebee", text: "#c62828" },
    orange: { bg: "#fff3e0", text: "#ef6c00" },
    yellow: { bg: "#fffde7", text: "#f9a825" },
    green: { bg: "#e8f5e9", text: "#2e7d32" },
    cyan: { bg: "#e0f7fa", text: "#00838f" },
    blue: { bg: "#e3f2fd", text: "#1565c0" },
    purple: { bg: "#f3e5f5", text: "#6a1b9a" },
    light: { bg: "#f5f5f5", text: "#616161" },
    dark: { bg: "#212121", text: "#ffffff" },
    warning: { bg: "#fff8e1", text: "#ff8f00" }, // Similar to amber/orange
    error: { bg: "#ffebee", text: "#c62828" }, // Same as red
};

const style = colors[color] || colors.default;
---

<span
    class="mark"
    style={`background-color: ${style.bg}; color: ${style.text};`}
>
    <slot>{label}</slot>
</span>

<style>
    .mark {
        display: inline-block;
        padding: 0.125rem 0.25rem;
        border-radius: 4px;
        font-size: 0.875em;
        line-height: 1.2;
        font-weight: 500;
        margin: 0 0.125rem;
        vertical-align: middle;
    }
</style>
