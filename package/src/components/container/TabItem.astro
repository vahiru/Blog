---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="tab-item" data-title={title}>
    <slot />
</div>

<style>
    .tab-item {
        display: none;
        animation: fadeIn 0.2s;
    }
    .tab-item.active {
        display: block;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
